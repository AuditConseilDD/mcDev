@model MCSolutions.Models.LoginView
@{
    ViewBag.Title = "Login";
}
@*<h2>Login</h2>*@

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "newUserForm", @class = "form-horizontal", role = "form" }))

{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*<div class="content-gradient"></div>*@
    <div class="container-fluid main-content">
        <main role="main" class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 infobox">
                    <h2>Connexion</h2>
                    <small>Choisissez votre mot de passe</small>
                    <hr />
                    <form class="inscription-form">
                        <div class="form-group">
                            <label for="inputEmail">Login = Adresse email :</label>
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="inputMdp">Mot de passe :</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg is-valid" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </form>
                    <div class="row justify-content-center">
                        <div class="col-md-auto"><a href="#">Mot de passe oublié</a></div>
                        <div class="col-md-auto"> @Html.ActionLink("Créer un compte", "Registration", "Account")</div>
                    </div>

                    <br />
                    <div align="justify">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.RememberMe)
                            @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="infobox-button">
                        <a class="btn-custom-primary" role="button" href="javascript:document.getElementById('newUserForm').submit()">
                            <b>VALIDER</b>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
